<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_height_row">

        <ImageView
            android:id="@+id/image_view_icon_bottom_sheet_row"
            android:layout_width="@dimen/three_line_row_image_width"
            android:layout_height="@dimen/three_line_row_image_height"
            android:contentDescription="@string/crime_icon_desc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/burglary_icon_21" />

        <TextView
            android:id="@+id/text_view_category"
            style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/three_line_row_margin_start"
            android:text="@string/sample_text"
            app:layout_constraintStart_toEndOf="@+id/image_view_icon_bottom_sheet_row"
            app:layout_constraintTop_toTopOf="@+id/image_view_icon_bottom_sheet_row" />

        <TextView
            android:id="@+id/text_view_location_type"
            style="@style/TextAppearance.MdcTypographyStyles.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/three_line_row_margin_start"
            android:text="@string/sample_text"
            app:layout_constraintStart_toEndOf="@+id/image_view_icon_bottom_sheet_row"
            app:layout_constraintTop_toBottomOf="@+id/text_view_category" />

        <TextView
            android:id="@+id/text_view_month"
            style="@style/TextAppearance.MdcTypographyStyles.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/three_line_row_margin_start"
            android:text="@string/sample_text"
            app:layout_constraintStart_toEndOf="@+id/image_view_icon_bottom_sheet_row"
            app:layout_constraintTop_toBottomOf="@+id/text_view_location_type" />

        <TextView
            android:id="@+id/text_view_distance"
            style="@style/TextAppearance.MdcTypographyStyles.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_end_16"
            android:text="@string/sample_text"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_view_category" />

        <View
            android:id="@+id/view"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/layout_height_2"
            android:layout_marginTop="16dp"
            android:background="@color/gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_month" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

